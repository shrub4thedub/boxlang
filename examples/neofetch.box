[main]
  set user $(env USER)
  set host $(run hostname)
  set os $(run uname -o)
  set kernel $(run uname -r)
  set arch $(run uname -m)
  set uptime $(run uptime -p)

  echo "       ______"
  echo "      |      | $user@$host"
  echo "      | BOX  | OS: ${os[*]}"
  echo "      |______| Kernel: ${kernel[*]}"
  echo "               Arch: ${arch[*]}"
  echo "               Uptime: ${uptime[*]}"
end
